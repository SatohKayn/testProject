<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <link rel="icon" href="data:,">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Battleship</title>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Montserrat&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="popup" style="display: none;">
            <div class="popup-content">
                <img src="/images/giphy.gif" alt="Animated GIF" width="100%">
                <button class="close-popup">X</button>
            </div>
        </div>
        <div id="code-display" style="display: grid; place-items: center;">
            <div class="room-code" style="font-size: 2rem; color: red;">Room Code: <span id="room-code"></span></div>
            <div class="btn-set" style="display: flex; justify-content: space-between;">
                <button id="copy-button" class="btngame">Copy URL</button>
                <button id="popup-button" class="btngame">QRCODE</button>
            </div>

        </div>

        <div class="player-container" style="text-align: -webkit-center;">
            <div class="p1">
                <div>Player 1<img class="img" src="/images/loading-gif.gif" style="width: 32px; height: 32px;"></div>
                <div class="connected">Connected</div>
                <div class="ready">Ready</div>
                <span class="timer">10:00</span>
            </div>

            <div class="p2">
                <div>Player 2<img class="img" src="/images/loading-gif.gif" style="width: 32px; height: 32px;"></div>
                <div class="connected">Connected</div>
                <div class="ready">Ready</div>
                <span class="timer">10:00</span>
            </div>
        </div>
        <div id="gameContainer">
        </div>
        <div class="game-info" style="color: red;">
            <p>Turn: <span id="turn-display"></span></p>
            <p>Info: <span id="info"></span></p>
        </div>
        <div class="setup-buttons">
            <button id="start-button" class="btngame">START GAME</button>
        </div>

    </div>
    <script>
        var user = <%- JSON.stringify(user) %>;
    </script>
    <script src="/js/multi.js" type="module"></script>
</body>

</html>